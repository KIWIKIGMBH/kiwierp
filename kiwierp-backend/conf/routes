# Swagger
GET           /api-docs                                                            controllers.ApiHelpController.getResources

# Sessions
POST          /sessions                                                            controllers.SessionsController.index
GET           /sessions                                                            controllers.SessionsController.user
GET           /api-docs/sessions                                                   controllers.ApiHelpController.getResource(paths = "/sessions")

# Users
GET           /users                                                               controllers.UsersController.list
POST          /users                                                               controllers.UsersController.create
GET           /users/:id                                                           controllers.UsersController.read(id: Long)
PATCH         /users/:id                                                           controllers.UsersController.update(id: Long)
DELETE        /users/:id                                                           controllers.UsersController.delete(id: Long)
GET           /api-docs/users                                                      controllers.ApiHelpController.getResource(paths = "/users")

# Products
GET           /inventory-management/products                                       controllers.ProductsController.list
POST          /inventory-management/products                                       controllers.ProductsController.create
GET           /inventory-management/products/:id                                   controllers.ProductsController.read(id: Long)
PATCH         /inventory-management/products/:id                                   controllers.ProductsController.update(id: Long)
DELETE        /inventory-management/products/:id                                   controllers.ProductsController.delete(id: Long)
GET           /inventory-management/products/:id/inventories                       controllers.ProductsController.listInventories(id: Long)
POST          /inventory-management/products/:id/inventories                       controllers.ProductsController.createInventory(id: Long)
GET           /inventory-management/products/:id/inventories/:inventoryId          controllers.ProductsController.readInventory(id: Long, inventoryId: Long)
PATCH         /inventory-management/products/:id/inventories/:inventoryId          controllers.ProductsController.updateInventory(id: Long, inventoryId: Long)
DELETE        /inventory-management/products/:id/inventories/:inventoryId          controllers.ProductsController.deleteInventory(id: Long, inventoryId: Long)
GET           /api-docs/inventory-management/products                              controllers.ApiHelpController.getResource(paths = "/inventory-management/products")

