PATCH         /products/:id                    controllers.ProductsController.update(id: Long)
DELETE        /products/:id                    controllers.ProductsController.delete(id: Long)
GET           /api-docs/products               controllers.ApiHelpController.getResource(paths = "/products")

# Parts
GET           /parts                           controllers.PartsController.list
POST          /parts                           controllers.PartsController.create
GET           /parts/:id                       controllers.PartsController.read(id: Long)
PATCH         /parts/:id                       controllers.PartsController.update(id: Long)
DELETE        /parts/:id                       controllers.PartsController.delete(id: Long)
POST          /parts/:id/classification        controllers.PartsController.classify(id: Long)
GET           /api-docs/parts                  controllers.ApiHelpController.getResource(paths = "/parts")

